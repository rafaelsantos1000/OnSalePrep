@model OnSalePrep.Web.Data.Entities.Category

@{
    ViewData["Title"] = "Nova Categoria";
}

<h1>Criar Nova</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="d-grid gap-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <partial name="_Category" />

            <div class="form-group">
                <input type="submit" value="Novo" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
